<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.ChooseCourseActivity"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:text="Here are the students that are enrolled in your courses!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="204dp">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:background="@color/International_orange"
                    android:padding="5dp"
                    android:text="Course Name"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:background="@color/International_orange"
                    android:padding="5dp"
                    android:text="Student AEM"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:background="@color/International_orange"
                    android:padding="5dp"
                    android:text="Student email"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextViewGrades"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:text="In this form you can grade a student on a specific course"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/S_AEM"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_bkg"
            android:drawableLeft="@drawable/baseline_numbers_24"
            android:drawablePadding="8dp"
            android:hint="Student's AEM"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/subject_name"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_bkg"
            android:drawableLeft="@drawable/baseline_school_24"
            android:drawablePadding="8dp"
            android:hint="Subject"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/grade"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_bkg"
            android:drawableLeft="@drawable/baseline_123_24"
            android:drawablePadding="8dp"
            android:hint="Grade (0-10)"
            android:inputType="number"
            android:padding="8dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/grade_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#ba160c"
            android:gravity="center"
            android:text="PUT GRADE"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>