<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Here are your grades for this semester!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="227dp">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:background="@color/International_orange"
                    android:padding="5dp"
                    android:text="Course Name"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:background="@color/International_orange"
                    android:padding="5dp"
                    android:text="Grade"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/titleTextViewNoGrades"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_gravity="center_horizontal"
        android:text="If the table above is empty it means that none of your courses have been graded yet. You can find the professor's email in the home page if you have a question about your grades. Thank you for using our app!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>